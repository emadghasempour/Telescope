<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_rate_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/comment_item"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:visibility="visible"
    >
    <RelativeLayout
       android:id="@+id/showrate_parent_item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/showrate_progress_height"
        >

        <com.negah.telescope.app.view.CustomFontTextView
            android:layout_width="@dimen/showrate_item_title_width"
            android:layout_height="wrap_content"
            android:text="emad"

            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/show_rate_progressBar_title1"
            android:paddingRight="@dimen/showrate_item_title_padding"
            android:layout_marginRight="0dp"
            android:textSize="@dimen/text_size_small"

            />
        <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/showrate_progressBar1"

            android:progress="30"
            android:layout_toRightOf="@id/show_rate_progressBar_title1"
            android:max="@integer/showrate_max_progress"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/customprogress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginRight="@dimen/showrate_item_prg_margin"
            />
    </RelativeLayout>
