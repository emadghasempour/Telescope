<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fitsSystemWindows="true"
    app:layout_collapseMode="pin"

    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"
        android:transitionName="@string/shared_iconImage"
        android:id="@+id/desc_appiconImage"
        />
    <TextView
        android:id="@+id/desc_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_appiconImage"
        android:text="name"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ColorPrimary"
        />
    <TextView
        android:id="@+id/desc_appvendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_appname"
        android:text="vendor"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ColorPrimary"
        />
    <TextView
        android:id="@+id/desc_shortdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_appvendor"
        android:text="hello"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ColorPrimary"
        />
</RelativeLayout>